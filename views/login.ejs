<%-include('partials/header.html')%>
    <link rel="stylesheet" href="../css/login.css">
    <title>Login page</title>
    </head>

    <body>
        <div class="container bg-image">
            <h1 class="display-1 header" style="background-color:#3a3736; color:white">Library Management System</h1>
            <div class="row">
                <div class="col-sm-8 login-box">
                    <div class="row">
                        <div class="col-sm-6 sign-up">
                            <h3>Don't have an account?</h3><!--<h3>Register now</h3> -->
                            <a href="/register"><button type="button" class="btn btn-success">Register</button></a>
                        </div>
                        <div class="col-sm-6 login-form">
                            <h3>Already have an account? Sign in...</h3>
                            <form method="post">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Password</label>
                                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
                                </div>
                                <button type="submit" class="btn btn-danger">Login</button>
                            </form>
                            <div class="">
                                <%= message; %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<%-include('partials/footer.html')%>
