                            <table class="table table-striped table-light table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Issue ID</th>
                                        <th scope="col">Book ID</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Author</th>
                                        <th scope="col">ISBN</th>
                                        <th scope="col">Borrower ID</th>
                                        <th scope="col">Borrower Email</th>
                                        <th scope="col">Issued Date</th>
                                        <th scope="col">Return Date</th>
                                        <th scope="col">Days Left</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(let i=0; i < res.length; i++){ %>
                                        <tr>
                                                <th scope="row">
                                                    <%=res[i]._id%>
                                                </th>
                                                <td>
                                                    <%=res[i].book_id._id%>
                                                </td>
                                                <td>
                                                    <%=res[i].book_id.title%>
                                                </td>
                                                <td>
                                                    <%=res[i].book_id.author%>
                                                </td>
                                                <td>
                                                    <%=res[i].book_id.ISBN%>
                                                </td>
                                                <td>
                                                    <%=res[i].borrower_id._id%>
                                                </td>
                                                <td>
                                                    <%= res[i].borrower_id.email %>
                                                </td>
                                                <td>
                                                    <%=res[i].issueDate%>
                                                </td>
                                                <td>
                                                    <%=res[i].returnDate%>
                                                </td>
                                                <td>
                                                    <%
                                                        const date1 = new Date();
                                                        const date2 = res[i].returnDate;
                                                        const timeDiff = date2.getTime() - date1.getTime();
                                                        const daysLeft = Math.ceil(timeDiff / (1000 * 3600 * 24));
                                                    %>
                                                    <%=daysLeft%>
                                                </td>
                                                <td>
                                                    <a href="/admin/books/unissue/<%=res[i]._id%>?_method=delete"><button type="button" class="btn btn-danger">Unissue Book</button></a>
                                                </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
